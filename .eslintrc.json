{
  "env": {
    "es6": true,
    "es2017": true,
    "es2020": true,
    "node": true
  },
  "plugins": [
    "ava",
    "node",
    "import",
    "jsdoc",
    "security"
  ],
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:ava/recommended",
    "plugin:node/recommended-module",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsdoc/recommended",
    "plugin:security/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "warn",
    "require-jsdoc": "off",
    "valid-jsdoc": "off"
  }
}
