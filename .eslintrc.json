{
  "env": {
    "es6": true,
    "es2017": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:ava/recommended",
    "plugin:node/recommended-module",
    "plugin:import/errors",
    "plugin:import/warnings",
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "warn"
  }
}
